@{
    Layout = null;
}
<style>
    .some-pdf-container {
        width: 100%;
        height: 100%;
        background-color: #d7d4d4 !important;
    }
</style>
<form class="form-horizontal form-label-left" ng-submit="$ctrl.sumitformedit()" style="height: calc(100%) !important; " ng-valid name="formedit">
    <div class="modal-header">
        <h3 style="font-size: 16px;" class="modal-title" id="modal-title">Xem file PDF <a class="pull-right" href="#" ng-click="$ctrl.cancel()"><i class="fa fa-close"></i></a></h3>
    </div>
    <div class="modal-body" id="modal-body" style="height: calc(100% - 32px) !important; padding: 4px 10px;">
        <div class="row" style="height: calc(100%) !important;">
            <iframe ng-src="{{$ctrl.urldoc}}" class="some-pdf-container"></iframe>
        </div>

    </div>
</form>
