                        <tr ng-repeat-start="item in BaiVietTuong track by $index">
                            <td>
                                <a href="#" title="{{item.TieuDe}}">{{item.TieuDe | limitTo : 30}}{{item.TieuDe.length > 30 ? '...' : ''}}</a>
                            </td>
                            <td>
                                <a href="#" title="{{item.MoTa}}">{{item.MoTa | limitTo : 35}}{{item.TieuDe.length > 35 ? '...' : ''}}</a>
