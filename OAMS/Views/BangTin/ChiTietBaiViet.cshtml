            <div class="label label-lg label-pink arrowed-right">Xem Tiếp</div>
            <div class="row">
                <div class="col-lg-3 col-sm-3 col-xs-6" ng-repeat="item in ThongTinBV.TinLienQuan">
                    <div class="thumbnail search-thumbnail">
                        <span class="search-promotion label label-success arrowed-in arrowed-in-right"><i class="ace-icon fa fa-user"></i> Thiên Vũ Lê Hoàng</span>

                        <img class="media-object" src="{{item.HinhAnh}}" />
                        <div class="caption">
                            <div class="clearfix">
                                <div class="pull-left bigger-110">
