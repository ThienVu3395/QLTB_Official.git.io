                                                            </div>

                                                            <div class="col-lg-9">
                                                                <b>{{item.TenNguoiDung}}</b>
                                                                <p><i class="ace-icon fa fa-clock-o"></i> 14/04/2020</p>
                                                            </div>

                                                            <div class="col-lg-12" style="margin-top:8px">
                                                                <p><b>{{item.TieuDe}}</b></p>
                                                                <p ng-show="!rm">{{item.NoiDung | limitTo : 150}}<span class="red" ng-show="item.NoiDung.length > 150" ng-click="read('more')"> Đọc Tiếp</span></p>
