                                                                                                        <i class="ace-icon fa fa-share"></i>
                                                                                                        Send
                                                                                                    </button>
                                                                                                </span>
                                                                                            </div>
                                                                                        </div>
                                                                                    </form>
                                                                                </div>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <p>
                                                <button class="btn btn-primary btn-block">
                                                    Đọc Tiếp
                                                    <i class="ace-icon fa fa-arrow-right icon-on-right"></i>
                                                </button>
                                            </p>
                                        </div>
                                    </div>
                                    @*/Tường Công Ty*@

                                    @*Sinh Nhật Trong Tháng*@
                                    <div id="bday" class="tab-pane">
                                        <div class="widget-box widget-color-blue">
                                            <div class="widget-body">
                                                <div class="widget-main">
                                                    <div class="clearfix" ng-show="DanhSachUser.length > 0">
                                                        <div class="itemdiv memberdiv col-lg-4" ng-repeat="item in DanhSachUser track by item.MaNguoiDung">
                                                            <div class="user">
                                                                <img alt="avatar" src="{{item.HinhAnh}}" />
