
@{
    ViewBag.Title = "ChiTietBaiViet";
    Layout = "~/Views/Shared/_LayoutMes.cshtml";
}

@section Css{
    <style>
        .widget-box {
            margin-bottom: 12px;
            border-radius: 16px;
            overflow: hidden
        }

        .no-deco {
            text-decoration: none !important;
        }

        .ava {
            height: 100%;
            border-radius: 50%;
            border: 1px solid black
        }

        .fs-16 {
            font-size: 16px
        }

        .fs-13 {
            font-size: 13px
        }

        .itemdiv.memberdiv {
            /* width: 175px; */
            padding: 2px;
            margin: 3px 0;
            float: left;
            border-bottom: 1px solid #E8E8E8;
        }

        h3 {
            font-size: 14px !important;
            min-height: 50px;
        }

        .carousel-inner > .item > a > img, .carousel-inner > .item > img, .img-responsive, .thumbnail a > img, .thumbnail > img {
            display: block;
            height: 180px;
            width: 100%;
        }

        .label-lg.arrowed, .label-lg.arrowed-in, .label {
            /* margin-left: 6px; */
            margin-bottom: 4px;
        }

        select.form-control {
            padding: 4px 6px;
            height: 30px;
        }

        a {
            color: #337ab7;
            text-decoration: none;
            line-height: 20px;
        }

        .ace-settings-box.open {
            width: 500px;
            height: 100%;
            max-width: 500px;
            max-height: 100%;
            padding: 12px;
            border-width: 2px;
            -webkit-transition-delay: 0s;
            -moz-transition-delay: 0s;
            -o-transition-delay: 0s;
            transition-delay: 0s;
        }

        .itemdiv.memberdiv > .body > .name > a {
            display: inline-block;
            max-width: 100%;
            max-height: 18px;
            overflow: hidden;
            text-overflow: ellipsis;
            word-break: break-all;
        }

        .itemdiv > .body {
            width: 100%;
            margin-left: 50px;
            margin-right: 12px;
            position: relative;
        }
    </style>
}

@section Scripts{
    <script src="~/MyScript/bangtin/TrangChu00Ctrl.js"></script>
}

<div ng-controller="TC00Ctrl" ng-init="InitChiTiet(@ViewBag.MaTinTuc)">
    <div class="breadcrumbs breadcrumbs-fixed" id="breadcrumbs">
        <ul class="breadcrumb">
            <li>
                <i class="ace-icon fa fa-home home-icon"></i>
                <a href="~/Home">FSM</a>
            </li>
            <li class="active">Bảng Tin</li>
        </ul><!-- /.breadcrumb -->

        <div class="nav-search" id="nav-search">
            <form class="form-search">
                <span class="input-icon">
                    <input type="text" placeholder="Search ..." class="nav-search-input" id="nav-search-input" autocomplete="off" />
                    <i class="ace-icon fa fa-search nav-search-icon"></i>
                </span>
            </form>
        </div><!-- /.nav-search -->
    </div>

    <div id="mescontent" class="page-content">
        <div class="ace-settings-container" id="ace-settings-container">
