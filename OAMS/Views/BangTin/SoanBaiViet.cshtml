        <div id="modal-form" class="modal fade" tabindex="-1">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="blue bigger">Thêm Mới Bài Viết</h4>
                    </div>

                    <div class="modal-body">
                        <form name="tinThem" novalidate>
                            <div class="form-group">
                                <label class="control-label no-padding-right" for="form-field-1-1"> Tiêu Đề <span class="text-danger">*</span> </label>
                                <input type="text"
                                       id="form-field-1-1"
                                       placeholder="Nhập Tiêu Đề..."
                                       ng-model="objThem.TieuDe"
                                       name="TieuDe"
                                       ng-minlength="10"
                                       class="form-control"
                                       ng-required=true />
                                <div class="text-danger" ng-show="tinThem.TieuDe.$error.required">Bạn Chưa Nhập Tiêu Đề</div>
                                <div class="text-danger" ng-show="tinThem.TieuDe.$error.minlength">Tiêu Đề Phải Tối Thiểu 10 Ký Tự</div>

                                <span class="help-inline">
                                    <label class="middle">
                                        <input class="ace" type="checkbox" id="id-disable-check" ng-model="objThem.TinNoiBat" />
                                        <span class="lbl">
                                            <span class="text-danger">
                                                <a title="Tin được chọn là Tin quan trọng là tin được đưa được lên trang chủ tại thanh chạy chữ ngang."
                                                   data-rel="tooltip" href="#" data-placement="bottom">
                                                    Tin Quan Trọng
                                                </a>
                                            </span>
                                        </span>
                                    </label>
                                </span>

                                <span class="help-inline">
                                    <label class="middle">
                                        <input class="ace" type="checkbox" ng-model="objThem.HienThi" />
                                        <span class="lbl"> Duyệt Tin Này</span>
                                    </label>
                                </span>
                            </div>

                            <div class="row">
                                <div class="col-lg-12">
                                    <label for="form-field-11">Mô Tả Ngắn <span class="text-danger">*</span></label>
                                    <textarea id="form-field-11"
                                              ng-model="objThem.MoTa"
                                              ng-minlength="10"
                                              name="MoTa"
                                              placeholder="Nhập Mô Tả..."
                                              class="autosize-transition form-control"
                                              ng-required=true></textarea>
                                    <div class="text-danger" ng-show="tinThem.MoTa.$error.required">Bạn Chưa Nhập Nội Dung Cho Mô Tả</div>
                                    <div class="text-danger" ng-show="tinThem.MoTa.$error.minlength">Tiêu Đề Phải Tối Thiểu 10 Ký Tự</div>
                                </div>

                                <div class="form-group col-lg-6">
                                    <label class="control-label no-padding-right" for="form-field-1-1">Hình Đại Diện</label>
                                    <input type="file" class="form-control" id="id-input-file-2" nv-file-select uploader="uploaderImage" filters="upImg" />
                                </div>

                                <div class="form-group col-lg-6">
                                    <label class="control-label no-padding-right" for="form-field-1-1">File Đính Kèm</label>
                                    <input type="file" class="form-control" id="id-input-file-2" nv-file-select uploader="uploaderFile" filters="upFile" /><br />
                                </div>

                                <div id="accordion" class="accordion-style1 panel-group col-lg-12" ng-show="ttup">
                                    <div class="panel panel-default">
                                        <div class="panel-heading">
                                            <h4 class="panel-title">
                                                <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion" href="#collapseOne">
                                                    <i class="ace-icon fa fa-angle-down bigger-110" data-icon-hide="ace-icon fa fa-angle-down" data-icon-show="ace-icon fa fa-angle-right"></i>
                                                    &nbsp;Danh Sách File Đính Kèm
                                                </a>
                                            </h4>
                                        </div>

                                        <div class="panel-collapse collapse" id="collapseOne">
                                            <div class="panel-body">
                                                <div class="row">
                                                    <div class="col-sm-6">
                                                        <h3 class="header smaller lighter green">
                                                            <i class="ace-icon fa fa-bullhorn"></i>
                                                            Ảnh Đại Diện
                                                        </h3>

                                                        <div class="alert alert-block alert-success" ng-show="ttIm">
                                                            <p>
                                                                <strong>
                                                                    <i class="ace-icon fa fa-check"></i>
                                                                    {{HinhAnh.file.name}}
                                                                </strong>
                                                                ({{HinhAnh.file.size}} KB)
                                                            </p>

                                                            <p ng-show="ttImg">
                                                                @*<button class="btn btn-sm btn-success" ng-click="item.upload()">Upload</button>*@
                                                                <button class="btn btn-sm btn-success" ng-click="uploadImg(HinhAnh)">Upload</button>
                                                                <button class="btn btn-sm btn-danger" ng-click="removeImg()">Remove</button>
                                                            </p>
                                                        </div>
                                                    </div>

