                                                        <h3 class="header smaller lighter green">
                                                            <i class="ace-icon fa fa-bullhorn"></i>
                                                            Tập Tin Đính Kèm
                                                        </h3>

                                                        <div class="alert alert-block alert-success" ng-repeat="item in uploaderFile.queue">
                                                            <p>
                                                                <strong>
                                                                    <i class="ace-icon fa fa-book"></i>
                                                                    {{item.file.name}}
                                                                </strong>
                                                                ({{item.file.size}} KB)
                                                            </p>

                                                            <p id="ttFile{{$index}}">
                                                                <button class="btn btn-sm btn-success" ng-click="uploadfile(item)">Upload</button>
                                                                <button class="btn btn-sm btn-danger" ng-click="removeFile(item)">Remove</button>
                                                            </p>
                                                        </div>
                                                    </div>
