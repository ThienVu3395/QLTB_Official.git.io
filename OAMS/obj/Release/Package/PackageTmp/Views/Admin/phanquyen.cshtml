
@{
    Layout = "~/Views/Shared/_LayoutMes.cshtml";
}
<div ng-controller="phanquyenCtrl">
    <div class="breadcrumbs breadcrumbs-fixed" id="breadcrumbs">
        <ul class="breadcrumb">
            <li>
                <i class="ace-icon fa fa-home home-icon"></i>
                <a href="~/Home">CSS</a>
            </li>
            <li>Cấu hình hệ thống</li>
            <li class="active" style="font-weight:bold;">Phân quyền theo nhóm</li>
        </ul><!-- /.breadcrumb -->

        <div class="nav-search" id="nav-search">
        </div><!-- /.nav-search -->
    </div>
    <div id="mescontent" class="page-content">
        <div class="row" style="height: calc(100%);">
            <div class="col-sm-4 col-xs-4" style="height: calc(100%);min-height:350px;border-right:solid 1px #F1F1F1">
                <h4 style="border-bottom:dotted 1px #F1F1F1; font-size:11pt;margin-top: 0px;">Nhóm quyền: </h4>
                <div class="row" style="overflow-y: auto; height: calc(100% - 25px); padding-right:5px">
                    <table class="table table-striped table-bordered table-hover dataTable no-footer" style="margin-bottom:0px;">
                        <thead>
                            <tr>
                                <th style="width: 100px; text-align:center">Mã nhóm</th>
                                <th>Tên nhóm</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="irow in dataInnit" ng-click="selectrows(irow)" class="{{ irow.MANHOM === idselect.MANHOM ?'selected':''}}">
                                <td style="text-align:left"><span ng-bind="irow.MANHOM"></span></td>
                                <td>
                                    <span ng-bind="irow.TENNHOM"></span>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="row" style="height:25px;">
                    <div class="col-xs-12">
                        <ul style="margin-top:2px;margin-bottom:0px;" uib-pagination previous-text="Trước" next-text="Sau" ng-change="pageChanged()" total-items="TotalItems" ng-model="CurrentPage" items-per-page="perPage" max-size="maxSize" class="pagination-sm" boundary-link-numbers="true" rotate="false"></ul>
                    </div>
                </div>
            </div>
            <div class="col-sm-8 col-xs-8" style="height: calc(100%);min-height:350px;">
                <h4 style="border-bottom:dotted 1px #F1F1F1; font-size:11pt;margin-top: 0px;">Danh sách các chức năng: </h4>
                <div style="padding-top:2px;padding-bottom:2px !important;border-bottom:solid 1px #F1F1F1;">
                    <div class="btn-group" style="margin-top:-10px;font-size:9pt;">
                        <button ng-click="savechange()" ng-disabled="actionbp" class="btn btn-xs btn-primary" style="font-size:9pt;"><i class="fa fa-save"></i> Ghi nhận</button>
                    </div>

                </div>
                <div class="row" style="overflow-y: auto; height: calc(100% - 20px);">
                    <table class="table table-striped table-bordered table-hover dataTable no-footer" style="margin-bottom:0px;">
                        <thead>
                            <tr>
                                <th style="width: 70px; text-align:center">STT</th>
                                <th>Tên chức năng</th>
                                <th style="width: 100px;text-align:center">
                                    <input style="width:20px;height:20px;" ng-model="checkall" ng-change="checkallcheck()" type="checkbox" />
                                </th>

                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat-start="g in pgroup">
                                <td colspan="3" style="text-align:left"><span style="font:bold;" ng-bind="g.NHOMNAME"></span></td>
                            </tr>
                            <tr ng-repeat="irow in dataInnitu|filter:{NHOMID:g.NHOMID}">
                                <td style="text-align:left"><span ng-bind="$index +1"></span></td>
                                <td>
                                    <span ng-bind="irow.TENCHUCNANG"></span>
                                </td>
                                <td style="text-align:center">
                                    <input style="width:20px;height:20px;" type="checkbox" ng-change="checkchange()" ng-model="irow.CHECKED" />
                                </td>
                            </tr>
                            <tr ng-repeat-end>
                                <td colspan="3"></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@Html.IncludeVersionedJs("~/MyScript/admin/phanquyenCtrl.js")



